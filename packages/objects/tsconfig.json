{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "lib": ["DOM", "ES2015", "ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "rootDir": "src",
    "composite": true
  },
  "include": ["src"]
}
